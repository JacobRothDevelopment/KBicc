{
  "tasks": [
    {
      "label": "Build C++",
      "type": "shell",
      "command": "g++", // add MinGW64\bin to PATH
      // "command": "C:\\MinGW64\\bin\\g++.exe",
      "args": [
        "-g",
        "${workspaceFolder}\\cpp\\main.cpp",
        "-o",
        "${workspaceFolder}\\cpp\\main.exe"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
